<div class="mt-4">
    <h3>Create a course</h3>
    <form action="/courses/store" method="post">
    <div class="mb-3 row">
        <label for="name" class="col-sm-2 col-form-label">Course Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="description" name="description">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="videoId" class="col-sm-2 col-form-label">Video ID</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>
    </form>
</div>